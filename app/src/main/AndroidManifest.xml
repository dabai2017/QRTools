<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dabai.qrtools">
    <!-- 联系人权限 -->
    <application
        android:name=".CarApplication"
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@mipmap/ic_launcher5"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">

        <activity android:name=".activity.WIFIandroid"
            android:label="WiFi列表"
            ></activity>

        <activity
            android:name=".ScanToolActivity"
            android:label="扫描二维码" /> <!-- MAIN活动 -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity> <!-- 浏览器打开活动 -> 二维码 -->
        <activity
            android:name=".BrowserOpen"
            android:label="链接转换成二维码">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- 支持的协议 -->
                <data android:scheme="https" />
                <data android:scheme="http" />
                <data android:scheme="tencent" />
                <data android:scheme="ftp" />
            </intent-filter>
        </activity> <!-- 其他 -->
        <activity
            android:name=".TextQRActivity"
            android:label="二维码生成"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ClipActivity"
            android:label="剪切板文本转二维码" />
        <activity
            android:name=".FeedBack"
            android:label="反馈"
            android:theme="@style/Theme.AppCompat.Light.Dialog.Alert" />
        <activity
            android:name=".ScanResultActivity"
            android:label="扫描结果" /> <!-- 文本分享打开活动 -> 二维码 -->
        <activity
            android:name=".TextOpen"
            android:label="文本转换成二维码"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity> <!-- > 二维码 -->

        <activity android:name=".AboutActivity" />
        <activity
            android:name=".SettingActivity"
            android:label="设置" />
        <activity
            android:name=".WxScanActivity"
            android:label="调用微信扫一扫" />
        <activity
            android:name=".WebActivity"
            android:label="QRT打开链接">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- 支持的协议 -->
                <data android:scheme="https" />
                <data android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GifActivity"
            android:label="GIF二维码制作" />
        <activity
            android:name=".MoreActivity"
            android:label="批量生成二维码"
            android:windowSoftInputMode="stateHidden" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.dabai.qrtools.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service
            android:name=".ClipService"
            android:enabled="true"
            android:exported="true" /> <!-- 访问文件权限 -->
        <service
            android:name=".ScreenshotMonitorService"
            android:enabled="true"
            android:exported="true" />
    </application>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> <!-- 储存权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- 安装SHORTCUT -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 添加快捷方式 -->
    <uses-permission android:name="android.permission.INSTALL_SHORTCUT" /> <!-- 移除快捷方式 -->
    <uses-permission android:name="android.permission.UNINSTALL_SHORTCUT" /> <!-- 查询快捷方式 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" /> <!-- 网络权限 -->
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" /> <!-- 修改系统设置 -->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" /> <!-- wifi -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 震动 和 安装App -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 前台服务必须 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 查看使用情况 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>