<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ScanResultActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">


            <TextView
                android:id="@+id/result_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:padding="14dp"
                android:text="扫描结果"
                android:autoLink="all"
                android:linksClickable="true"
                android:textColor="@color/colorAccent"
                android:textIsSelectable="true"/>

        </androidx.cardview.widget.CardView>



        <!--识别到的内容，来指定打开方式-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="程序智能识别:"
            android:textColor="#ec2727" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="这是一段文本?" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_copy"
                    android:text="复制" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:onClick="res_share"
                    android:text="分享" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>




        <!--识别到的内容，来指定打开方式-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cd2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="这是一个网址?" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_openlink"
                    android:text="浏览器打开" />
                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_openweb"
                    android:text="内置Web打开" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--识别到的内容，来指定打开方式-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cd3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="13sp"
                    android:text="这是电话号码?" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_createman"
                    android:text="新建联系人" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_saveman"
                    android:layout_marginLeft="1dp"
                    android:text="保存到已有联系人"
               />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--识别到的内容，来指定打开方式-->

        <!--识别到的内容，来指定打开方式-->
        <androidx.cardview.widget.CardView
            android:id="@+id/cd5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:text="这是WiFi信息?" />

                <Button
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="res_linkwifi"
                    android:text="点击连接" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <!--识别到的内容，来指定打开方式-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多操作"
                    android:layout_margin="10dp"/>

                <!--ChipGroup 默认状态，会换行，可多选-->
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:chipSpacingVertical="10dp"
                    app:chipSpacingHorizontal="10dp"
                    >

                    <com.google.android.material.chip.Chip
                        app:chipBackgroundColor="@color/colorAccent"
                        android:textColor="#ffffff"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="base64解码"
                        android:onClick="code_dnbase64"
                        android:textAppearance="?android:textAppearanceMedium" />


                    <com.google.android.material.chip.Chip
                        app:chipBackgroundColor="@color/colorAccent"
                        android:textColor="#ffffff"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AES解密"
                        android:onClick="res_pass"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <com.google.android.material.chip.Chip
                        app:chipBackgroundColor="@color/colorAccent"
                        android:textColor="#ffffff"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品条形码识别"
                        android:onClick="res_tiao"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <com.google.android.material.chip.Chip
                        app:chipBackgroundColor="@color/colorAccent"
                        android:textColor="#ffffff"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="复制并跳转SSR"
                        android:onClick="res_ssrr"
                        android:textAppearance="?android:textAppearanceMedium" />

                    <com.google.android.material.chip.Chip
                        app:chipBackgroundColor="@color/colorAccent"
                        android:textColor="#ffffff"
                        style="@style/Widget.MaterialComponents.Chip.Action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="蓝奏云解析"
                        android:onClick="lanzou"
                        android:textAppearance="?android:textAppearanceMedium" />


                </com.google.android.material.chip.ChipGroup>


            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <!--识别到的内容，来指定打开方式-->
    </LinearLayout></ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>